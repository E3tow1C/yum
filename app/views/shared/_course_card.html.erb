<label for="course_<%= course.id %>" class="cursor-pointer">
<div class="bg-white w-full rounded-md p-3 flex items-center gap-3 hover:bg-gray-50 transition-all">
<div class="relative hidden" data-toggle-target="container" >
    <%= check_box_tag "course_ids[]", course.id, false, id: "course_#{course.id}", class: "mr-2 peer absolute opacity-0 h-0 w-0", data: { toggle_target: "checkbox" } %>
    <div class="w-5 h-5 border border-gray-300 rounded flex items-center justify-center peer-checked:bg-[#FF6159] peer-checked:border-[#FF6159] transition-colors">
    <i class="fa-solid fa-check text-white text-sm"></i>
    </div>
</div>
<div class="flex-1 text-gray-600 select-none">
    <%= course.name %>
</div>
</div>