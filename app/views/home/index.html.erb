<h1>Welcome to Yum</h1>

<div class="container">
  <% if user_signed_in? %>
    <div class="user-details">
      <p>Welcome, <%= current_user.name %></p>
      <p>Email: <%= current_user.email %></p>
      <div class="mt-3">
        <%= link_to "Go to Dashboard", dashboard_path, class: "btn btn-primary" %>
        <%= link_to "Sign out", signout_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% else %>
    <div class="login-options">
        <p>Please sign in to access your account:</p>
        <%= button_to "Sign in with Keycloak", "/auth/keycloak_openid", method: :post, data: { turbo: false }, class: "btn btn-primary" %> 
    </div> 
  <% end %>
</div>