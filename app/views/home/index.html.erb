<div class="flex flex-col ">
  <%= flash[:notice] %>
  <%= flash[:alert] %>
  <div class="">
    <h1 class="text-4xl text-yellow-700">Welcome to Yum</h1>
  </div>
  
  <div class="">
    <% if user_signed_in? %>
      <div class="">
        <p>Welcome, <%= current_user.name %></p>
        <p>Email: <%= current_user.email %></p>
        <p>Role: <%= session[:role] %></p>
        <div class="mt-3">
          <%= link_to dashboard_path do %>
            <div class="border-2 rounded-2xl border-gray-300 bg-gray-100 p-2 mb-2">
              <p class="text-center">Go to Dashboard</p>
            </div>
          <% end %>
          <%= link_to signout_path, data: { turbo: false }, class: "btn btn-danger" do %>
            <div class="border-2 rounded-2xl border-gray-300 bg-gray-100 p-2 mb-2">
              <p class="text-center">Sign out</p>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="">
          <p>Please sign in to access your account:</p>
          <%= button_to "Sign in with Keycloak", "/auth/keycloak_openid", method: :post, data: { turbo: false }, class: "border-2 rounded-2xl border-gray-300 bg-gray-100 p-2 mb-2 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>